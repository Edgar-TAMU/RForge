

<HeroSection Title="@Title" SubTitle="@SubTitle" />


<div class="container is-fluid">
    <div class="breadcrumb mt-2" aria-label="breadcrumbs">
        <ul>
            <li><a href="/">RForge</a></li>
            <li><a href="/component-listing">Components</a></li>
            <li class="is-active"><a href="#" aria-current="page">@Title</a></li>
        </ul>
    </div>

    <div class="columns">

        <div class="column is-3-desktop is-4-tablet">

            <section class="section">

                <div class="buttons">

                    @if (PlaygroundUrl != null)
                    {
                        <a class="button is-fullwidth is-primary is-outlined" href="@PlaygroundUrl">Playground</a>
                    }

                </div>


                @if (RepoLinks != null)
                {
                    <div class="menu">
                        <p class="menu-label">Repository Links</p>
                        <ul class="menu-list">
                            @RepoLinks
                        </ul>

                    </div>
                }

                @if (Examples != null)
                {
                    <div class="menu">
                        <p class="menu-label">Examples</p>
                        <ul class="menu-list">
                            @Examples
                        </ul>

                    </div>
                }

            </section>

        </div>

        <div class="column">

            <div class="content-container">

                @if (Purpose != null)
                {
                    <section class="section">
                        <h2 class="title">Purpose of Component</h2>
                        @Purpose
                    </section>
                }

                @if (BasicUsage != null)
                {
                    <section class="section">
                        <h2 class="title is-size-1">Basic Usage</h2>
                        @BasicUsage
                    </section>
                }
                @if (Setup != null)
                {
                    <section class="section">
                        <h2 class="title is-size-1">How to Setup</h2>
                        @Setup
                    </section>
                }
            </div>
        </div>
    </div>

</div>


@code {

    [Parameter]
    public RenderFragment HeroBanner { get; set; }

    [Parameter]
    public RenderFragment Examples { get; set; }

    [Parameter]
    public RenderFragment Setup { get; set; }

    [Parameter]
    public RenderFragment BasicUsage { get; set; }

    [Parameter]
    public RenderFragment Purpose { get; set; }

    [Parameter]
    public RenderFragment RepoLinks { get; set; }

    [Parameter]
    public string PlaygroundUrl { get; set; }

    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public string SubTitle { get; set; }


    public static RenderFragment SideLink((string title, TagInfo tag, string url) link) => __builder =>
    {
        <li title="@link.tag.Text">
            <a class="side-link is-family-monospace @link.tag.Color" href="@link.url">

                <span>@link.title</span>

            </a>
        </li>
    };

    public static RenderFragment SpacerLink() => __builder =>
    {
        <li class="spacer-link">&nbsp;</li>
    };

}
