@inherits RfDgFilterInput<DateTime?>

<th>
    <input type="date"
           placeholder="@Placeholder"
           value="@Value?.ToString("yyyy-MM-dd")"
           @onchange=OnChange
           name="@Name"
           title="@Title"
           class="input is-small @CssClass"
           min="@MinValue"
           max="@MaxValue"
           aria-label="@AriaLabelValue" />
</th>


